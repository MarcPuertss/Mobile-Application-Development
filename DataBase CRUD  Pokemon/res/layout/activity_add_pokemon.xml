<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#F4F4F9">

    <!-- Un contenedor LinearLayout que envuelve todo -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Título en la parte superior -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="24dp"
            android:gravity="center"
            android:text="AFEGIR POKÉMON"
            android:textColor="@android:color/black"
            android:textSize="24sp"
            android:textStyle="bold" />

        <!-- El LinearLayout que ya tienes -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="691dp"
            android:background="@drawable/bg_rounded_box"
            android:orientation="vertical"
            android:padding="16dp">

            <EditText
                android:id="@+id/edtName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:background="@drawable/bg_edittext"
                android:hint="Nom del Pokémon"
                android:padding="12dp"
                android:textColor="#000"
                android:textColorHint="#888" />

            <EditText
                android:id="@+id/edtHealth"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:background="@drawable/bg_edittext"
                android:hint="Salut"
                android:inputType="number"
                android:padding="12dp"
                android:textColor="#000"
                android:textColorHint="#888" />

            <EditText
                android:id="@+id/edtTipos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:background="@drawable/bg_edittext"
                android:hint="Tipus"
                android:padding="12dp"
                android:textColor="#000"
                android:textColorHint="#888" />

            <EditText
                android:id="@+id/edtNivel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:background="@drawable/bg_edittext"
                android:hint="Nivell"
                android:inputType="number"
                android:padding="12dp"
                android:textColor="#000"
                android:textColorHint="#888" />

            <EditText
                android:id="@+id/spnPokeball"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:background="@drawable/bg_edittext"
                android:hint="Tipus de Pokeball"
                android:padding="12dp"
                android:textColor="#000"
                android:textColorHint="#888" />

            <ImageView
                android:id="@+id/imgPokemon"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/bg_image"
                android:scaleType="centerCrop"
                android:src="@drawable/bmw" />

            <Button
                android:id="@+id/btnAdd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"
                android:backgroundTint="#4CAF50"
                android:padding="12dp"
                android:text="Afegir Pokémon"
                android:textColor="#fff" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/backbtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:clickable="true"
                app:srcCompat="@android:drawable/ic_menu_revert" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
